<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log_in"
    android:id="@+id/log_main"
    android:background="@drawable/background_animation">

    <View
        android:id="@+id/view"
        android:layout_width="416dp"
        android:layout_height="170dp"
        android:background="@color/colorprimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-2dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="420dp"
        android:layout_height="141dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/top_imageView"
        android:layout_width="150dp"
        android:layout_height="99dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/top_text"
        android:layout_width="228dp"
        android:layout_height="76dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/actor"
        android:text="Already Have An Account?"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />

    <EditText
        android:id="@+id/log_email"
        android:layout_width="344dp"
        android:layout_height="61dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/radius"
        android:drawableStart="@drawable/email"
        android:textStyle="bold"
        android:drawablePadding="16sp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/log_password"
        android:layout_width="344dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/radius"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="16sp"
        android:ems="10"
        android:textStyle="bold"
        android:hint="Password"
        android:inputType="numberPassword"
        android:padding="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_email" />

    <Button
        android:id="@+id/log_btn"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/radius_btn"
        android:text="Log In"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_password"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/log_ForgetPassword"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Forget Password?"
        android:textColor="@color/colorprimary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_btn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/or"
        android:layout_width="53dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Or"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_ForgetPassword"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/google"
        app:layout_constraintBottom_toTopOf="@+id/register_txt"
        app:layout_constraintEnd_toStartOf="@+id/facebook"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toTopOf="@+id/register_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/google"
        app:layout_constraintTop_toBottomOf="@+id/or"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />


    <TextView
        android:id="@+id/help"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:drawableRight="@drawable/help"
        android:gravity="center"
        android:text="Help"
        android:textStyle="bold"
        android:paddingHorizontal="40dp"
        android:textColor="@color/colorprimary"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/register_txt"
        app:layout_constraintEnd_toStartOf="@+id/facebook"
        app:layout_constraintStart_toEndOf="@+id/google"
        app:layout_constraintTop_toBottomOf="@+id/or"
        app:layout_constraintVertical_bias="0.525"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="New User? Register Now"
        android:textColor="@color/colorprimary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>